<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Balls R Us</title>
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BallsRUs.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

</head>
<body>
    <header>
        <div id="header-bar-container" class="row">
            <div class="container">
                <div class="row">
                    <div class="col-4 col-sm-3">
                        <div id="header-bar-logo-container-left" class="d-none d-sm-block">
                            <a asp-area="" asp-controller="Home" asp-action="Index"><img class="header-logo" title="Accueil" src="../img/logo_no_background_white.png" /></a>
                        </div>
                        <div id="header-icons-container-left" class="row d-flex d-sm-none">
                            <img class="header-icons" src="~/img/recherche.svg" />
                        </div>
                    </div>
                    <div class="col-4 col-sm-6">
                        <div id="search-bar-container" class="d-none d-sm-flex">
                            <div id="search-bar">
                                <input id="search-bar-text" type="text" name="search-bar-text" placeholder="Rechercher..." />
                                <button id="search-bar-button" type="submit" name="search-bar-button">
                                    <img src="~/img/recherche.svg" />
                                </button>
                            </div>
                        </div>
                        <div id="header-bar-logo-container-center" class="d-flex d-sm-none">
                            <a asp-area="" asp-controller="Home" asp-action="Index"><img class="header-logo" title="Accueil" src="../img/logo_no_background_white.png" /></a>
                        </div>
                    </div>
                    <div id="header-icons-container-right" class="row col-4 col-sm-3">
                        <img class="header-icons" src="~/img/user.svg" />
                        <img class="header-icons" src="~/img/shopping-cart.svg" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row mx-0">
            <div class="col-12 p-0">
                <nav class="navbar navbar-expand-sm bg-white border-bottom">
                    <div id="navbar-container">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">NOUVEAUTÉS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">BÂTONS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">BALLES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">VÊTEMENTS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">SACS</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    @if (ViewData["Title"] is not null && ViewData["Title"].ToString() == "Home")
    {
        <div id="homepage-slogan-image">
            <span id="homepage-slogan">
                Bienvenue sur le premier site 100% québécois de vente d'équipements de golf. <br />
                Swingez vers la perfection, un clic à la fois!
            </span>
        </div>


    }
    <div class="container p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted" style="padding-top:30px;">
        <div class="border-top">
            <div id="footer-sections-container" class="row pb-4">
                <div class="footer-block row col-lg-3 col-sm-6 col-12">
                    <h5 class="footer-block-title col-12">À PROPOS DE NOUS</h5>
                    <span class="footer-block-element col-12"><a class="footer-link " asp-area="" asp-controller="Home" asp-action="About">À propos</a></span>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Politiques de confidentialité</a></span>
                </div>
                <div class="footer-block row col-lg-3 col-sm-6 col-12">
                    <h5 class="footer-block-title col-12">ESPACE CLIENT</h5>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Retours et échanges</a></span>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Nous contacter</a></span>
                </div>
                <div class="footer-block row col-lg-3 col-sm-6 col-12">
                    <h5 class="footer-block-title col-12">SERVICES</h5>
                    <span class="footer-block-element col-12"><a class="footer-link " asp-area="" asp-controller="Home" asp-action="About">Localisateur de magasin</a></span>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Promotions</a></span>
                </div>
                <div class="footer-block row col-lg-3 col-sm-6 col-12">
                    <h5 class="footer-block-title col-12">RESTEZ CONNECTÉ</h5>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Blogue</a></span>
                    <span class="footer-block-element col-12"><a class="footer-link" asp-area="" asp-controller="Home" asp-action="Privacy">Événements</a></span>
                </div>
            </div>
            <div id="footer-copyright" class="border-top">
                <span id="footer-copyright-text">
                    &copy; 2023 Balls R Us Ltd. Tous droits réservés.
                </span>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
