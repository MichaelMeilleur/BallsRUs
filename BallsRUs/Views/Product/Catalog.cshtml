@{
    if (ViewBag.Category is not null)
        ViewData["Title"] = ViewBag.Category;
    else if (ViewBag.Search is not null)
        ViewData["Title"] = ViewBag.Search;
    else
        ViewData["Title"] = "Catalogue";

    Dictionary<string, bool> checkedBoxBrandFilter = ViewBag.checkedBoxBrandFilter;
}

<div id="product-index-promotions-carousel-container">
    <div id="product-index-promotions-carousel-controls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/slider1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/slider2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/slider3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#product-index-promotions-carousel-controls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#product-index-promotions-carousel-controls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row mx-0">
    <div id="product-index-filter-container" class="col-11 col-md-3 mb-3 mb-md-0 mx-auto mx-md-0 justify-self-center">
        <form asp-controller="Product" asp-action="Catalog" method="post">
            <div class="row">
                <div class="col-6 col-md-12 justify-content-center">
                    <h4>Trier</h4>
                    <select id="product-index-filter-sort-dropdown" name="filter">
                        <option id="empty-selected-filter" value="empty">&lt;aucun&gt;</option>
                        <option id="lowtohigh-selected-filter" value="low-to-high">Prix : Croissant</option>
                        <option id="hightolow-selected-filter" value="high-to-low">Prix : Décroissant</option>
                        <option id="brandalphabetical-selected-filter" value="brand-alphabetical">Marque</option>
                        <option id="newtoold-selected-filter" value="new-to-old">Nouveauté</option>
                    </select>
                </div>
                <div class="col-6 col-md-12 mt-0 mt-md-4">
                    <h4>Filtrer</h4>
                    <div class="product-index-filter-discounted-checkbox-container">
                        <h5>Produits en rabais</h5>
                        <input id="product-index-filter-discounted-checkbox" name="discounted" type="checkbox" value="true"
                               @if (ViewBag.FilterDiscounted)
                               {
                               @Html.Raw("checked")
                               } /> Produits en rabais
                    </div>
                    <div id="product-index-filter-brands-checkall-checkbox-container">
                        <input type="checkbox" /> Sélectionner toutes les marques
                    </div>
                    <div class="product-index-filter-brands-checkbox-container">
                        <h5>Filter by brand</h5>
                        @for (int i = 0; i < ViewBag.listBrands.Count; i++)
                        {
                            <div>
                                <input type="checkbox" name="checkedBoxBrandFilter[@ViewBag.listBrands[i]]" value="true"
                                   @if (checkedBoxBrandFilter != null && checkedBoxBrandFilter.ContainsKey(ViewBag.listBrands[i]))
                                   {
                                        @Html.Raw("checked")
                                   }>
                                <label>@ViewBag.listBrands[i]</label>
                            </div>
                        }
                    </div>
                    <p>
                        <label for="price">Montant sélection $</label>
                        <input type="text" id="product-index-filter-price-input" readonly style="border:0; font-weight:bold;"/>
                    </p>
                    <div id="product-index-filter-price-slider">
                        
                    </div>
                </div>

                <input id="product-index-filter-sort-button" asp-route-category="@ViewBag.Category" asp-route-search="@ViewBag.Search" type="submit" value="Trier" class="mb-4" />
            </div>
        </form>
    </div>
    <div class="col-12 col-md-9">
        <vc:product-list category="@ViewBag.Category" search="@ViewBag.Search" price-high-to-low="@ViewBag.HighToLow" price-low-to-high="@ViewBag.LowToHigh" brand-alphabetical="@ViewBag.BrandAlphabetical" new-to-old="@ViewBag.NewToOld" discounted="@ViewBag.FilterDiscounted" checked-box-brand-filter-vc="checkedBoxBrandFilter"></vc:product-list>
    </div>
</div>

@section Scripts {
    <script>
        var a = document.getElementById("hightolow-selected-filter");
        if ("@ViewBag.HighToLow" == "True") {
            a.setAttribute('selected', true);
        }
        else {
            a.removeAttribute('selected');
        }

        a = document.getElementById("lowtohigh-selected-filter");
        if ("@ViewBag.LowToHigh" == "True") {
            a.setAttribute('selected', true);
        }
        else {
            a.removeAttribute('selected');
        }

        a = document.getElementById("brandalphabetical-selected-filter");
        if ("@ViewBag.BrandAlphabetical" == "True") {
            a.setAttribute('selected', true);
        }
        else {
            a.removeAttribute('selected');
        }

        a = document.getElementById("newtoold-selected-filter");
        if ("@ViewBag.NewToOld" == "True") {
            a.setAttribute('selected', true);
        }
        else {
            a.removeAttribute('selected');
        }


        $(function() {
            $("#product-index-filter-price-slider").slider({
                range: true,
                min: 0,
                max: 1000,
                values: [25, 500],
                slide: function (event, ui){
                    $("price").val("$" + ui.values[0] + " - $" + ui.values[1]);

                    var min = ui.values[0];
                    var max = ui.values[1];
                }
            })
        })

        $(document).ready(function () {
            $("#product-index-filter-brands-checkall-checkbox-container").click(function () {
                $(".product-index-filter-brands-checkbox-container :checkbox").attr("checked", $(this).attr("checked"));
            });
        });
    </script>
}