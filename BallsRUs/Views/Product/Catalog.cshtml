@{
    if (ViewBag.Category is not null)
        ViewData["Title"] = ViewBag.Category;
    else if (ViewBag.Search is not null)
        ViewData["Title"] = ViewBag.Search;
    else
        ViewData["Title"] = "Catalogue";
}

<div id="product-index-promotions-carousel-container">
    <div id="product-index-promotions-carousel-controls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/slider1.png" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/slider2.png" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/slider3.png" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#product-index-promotions-carousel-controls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#product-index-promotions-carousel-controls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row">
    <div id="product-index-filter-container" class="col-12 col-md-3 mb-3 mb-md-0 mx-4 mx-md-0">
        <form asp-controller="Product" asp-action="Catalog" method="post">
            <div class="row">
                <div class="col-6 col-md-12 justify-content-center">
                    <h4>Trier</h4>
                    <select id="product-index-filter-sort-dropdown" name="filter">
                        <option value="empty">&lt;aucun&gt;</option>
                        <option value="low-to-high">Prix : Croissant</option>
                        <option value="high-to-low">Prix : Décroissant</option>
                        <option value="brand-alphabetical">Marque</option>
                        <option value="new-to-old">Nouveauté</option>
                    </select>
                </div>
                <div class="col-6 col-md-12 mt-0 mt-md-4">
                    <h4>Filtrer</h4>
                    <input id="product-index-filter-discounted-checkbox" type="checkbox" name="discounted" /> Produits en rabais
                </div>
                <input id="product-index-filter-sort-button" asp-route-category="@ViewBag.Category" asp-route-search="@ViewBag.Search" type="submit" value="Trier" class="mb-4" />
            </div>
        </form>
    </div>
    <div class="col-12 col-md-9">
        <vc:product-list category="@ViewBag.Category" search="@ViewBag.Search" price-high-to-low="@ViewBag.HighToLow" price-low-to-high="@ViewBag.LowToHigh" brand-alphabetical="@ViewBag.BrandAlphabetical" new-to-old="@ViewBag.NewToOld" discounted="@ViewBag.FilterDiscounted"></vc:product-list>
    </div>
</div>