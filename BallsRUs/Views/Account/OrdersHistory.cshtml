@using BallsRUs.Models.Account
@model IEnumerable<OrderManageVM>

@{
    ViewData["Title"] = "Liste des commandes";
}
<h3 class="account-orders-history-title">Historique de vos commandes</h3>
<div class="account-orders-history-container">
    @if (Model.Count() > 0)
    {
        <table class="table">
            <thead class="order-orderslist-table">
                <tr>
                    <th>Commande #</th>
                    <th>Date d'achat</th>
                    <th>Facturé à</th>
                    <th>Sous-Total</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <th class="row">@order.Number</th>
                        <td>@order.ConfirmationDate</td>
                        <td>@order.LastName @order.FirstName</td>
                        <td>@order.SubTotal$</td>
                        <td>@order.Status</td>
                        <td>@Html.ActionLink("Détails","Details","Order", new{orderId = order.Id}, new{ @class=" btn btn-primary" })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h4>Vous n'avez aucune commande</h4>
    }
</div>
