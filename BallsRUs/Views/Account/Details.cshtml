@using BallsRUs.Models.Account

@model AccountDetailsVM

@{
    ViewData["Title"] = "Mon compte";
}

<div class="container">
    <h3 id="account-details-title">Mon compte</h3>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="mb-4">
                <h4>Informations</h4>
            </div>
            <div class="mb-4">
                <p><strong>Nom : </strong>@Model.FirstName @Model.LastName</p>
            </div>
            <div class="mb-4">
                <p><strong>Courriel : </strong>@Model.Email</p>
            </div>
            <div class="mb-4">
                <p><strong>Numéro de téléphone : </strong>@Model.PhoneNumber</p>
            </div>
            <div class="mb-4">
                <a asp-controller="Account" asp-action="Editinfo">
                    <button class="account-details-modifier-button">Modifier</button>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            @if (Model.AddressStreet == null)
            {
                <div class="mb-4">
                    <h4>Adresse</h4>
                    <p>Aucune adresse</p>
                </div>
                <div class="form-group mt-4 text-start">
                    <a asp-controller="Account" asp-action="Address">
                        <button class="account-details-modifier-button">Ajouter une adresse</button>
                    </a>
                </div>
            }
            else
            {
                <div class="mb-4">
                    <h4>Adresse</h4>
                </div>
                <div class="mb-4">
                    <p>@Model.AddressStreet</p>
                </div>
                <div class="mb-4">
                    <p>@Model.AddressCity, @Model.AddressStateProvince (@Model.AddressCountry)</p>
                </div>
                <div class="mb-4">
                    <p>@Model.AddressPostalCode</p>
                </div>
                <div class="mb-4">
                    <a asp-controller="Account" asp-action="Address">
                        <button class="account-details-modifier-button">Modifier</button>
                    </a>
                </div>
            }
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-9">
            <h4>Mes commandes récentes</h4>
        </div>
        <div class="col">
            <a asp-controller="Account" asp-action="OrdersHistory">
                <button class="account-details-modifier-button">Voir tout</button>
            </a>
        </div>
    </div>
</div>
