@using BallsRUs.Models.Order

@model OrderDetailsVM

@{
    ViewData["Title"] = "Commande #" + Model.Number;
}

<div id="order-orderdetails-container">
    <h3>Détails de la Commande #@Model.Number</h3>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="mb-4">
            </div>
            <div class="mb-4">
                <p><strong>Nom : </strong>@Model.FirstName @Model.LastName</p>
            </div>
            <div class="mb-4">
                <p><strong>Courriel : </strong>@Model.EmailAddress</p>
            </div>
            <div class="mb-4">
                <p><strong>Numéro de téléphone : </strong>@Model.PhoneNumber</p>
            </div>
            <div class="mb-4">
                <p><strong>Quantité : </strong>@Model.ProductQuantity</p>
            </div>
            <div class="mb-4">
                <p><strong>Prix : </strong>@Model.ProductsCost</p>
            </div>
            <div class="mb-4">
                <p><strong>Frais de livraison : </strong>@Model.ShippingCost</p>
            </div>
            <div class="mb-4">
                <p><strong>Sous-total : </strong>@Model.SubTotal</p>
            </div>
            <div class="mb-4">
                <p><strong>Taxes : </strong>@Model.Taxes</p>
            </div>
            <div class="mb-4">
                <p><strong>Total : </strong>@Model.Total</p>
            </div>
            <div class="mb-4">
                <p><strong>Date de confirmation de votre commande : </strong>@Model.ConfirmationDate</p>
            </div>
            <div class="mb-4">
                <p><strong>Payée le : </strong>@Model.PaymentDate</p>
            </div>
        </div>
        <div>
            @Html.ActionLink("Retour", "OrdersHistory", "Account", new { }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Annuler ma commande", "CancelOrder", "Order", new{ OrderId = Model.Id }, new{ @class = "btn btn-danger" })
        </div>
    </div>
</div>

