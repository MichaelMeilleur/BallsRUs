@using BallsRUs.Models.Checkout

@model CheckoutInformationVM

@{
    ViewData["Title"] = "Information de la commande";
}

<div id="checkout-information-container">
    <h3>Informations de la commande</h3>
    <form asp-controller="Checkout" asp-action="Information" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div id="checkout-information-user-info-container">
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="EmailAddress" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div id="checkout-information-address-container" style="display:none">
            <div class="form-group">
                <input asp-for="AddressStreet" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="AddressStreet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AddressCity" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="AddressCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AddressStateProvince" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="AddressStateProvince" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AddressCountry" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="AddressCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AddressPostalCode" class="form-control" placeholder="Courriel" />
                <span asp-validation-for="AddressPostalCode" class="text-danger"></span>
            </div>
        </div>
        @if (User!.Identity!.IsAuthenticated && Model.HasExistingAddress)
        {
            <div id="checkout-information-existing-address-container">
                <div id="checkout-information-existing-address-info">
                    <span>@Model.AddressStreet</span>
                    <span>@Model.AddressCity, @Model.AddressStateProvince (@Model.AddressCountry)</span>
                    <span>@Model.AddressPostalCode</span>
                </div>
                <div class="mb-4">
                    <input id="checkout-information-use-existing-address-checkbox" type="checkbox" asp-for="UseExistingAddress"> Utiliser l'addresse existante
                </div>
            </div>
        }
        else if (User!.Identity!.IsAuthenticated)
        {
            <div class="mb-4">
                <input id="checkout-information-save-address-checkbox" type="checkbox" asp-for="SaveAddress"> Sauvegarder l'adresse pour les futurs achats
            </div>
        }
        <div class="mb-4">
            <input id="checkout-information-confirm-information-checkbox" type="checkbox" asp-for="ConfirmInformation"> Je confirme que mes informations sont exactes
        </div>
        <div class="form-group mt-4 mb-1 text-start">
            <input type="submit" value="Compléter la commande" />
        </div>
    </form>
</div>